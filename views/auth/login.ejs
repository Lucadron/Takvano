<div class="text-center mb-4">
  <h2 class="text-primary-blue">🔐 Giriş Yap</h2>
</div>

<div class="card card-soft shadow" style="max-width: 500px; margin: auto;">
  <% if (hata) { %>
    <div class="alert alert-danger text-center"><%= hata %></div>
  <% } %>

  <form action="/giris" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">📧 E-posta</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="sifre" class="form-label">🔒 Şifre</label>
      <input type="password" class="form-control" id="sifre" name="sifre" required>
    </div>
    <button type="submit" class="btn btn-takvano w-100">Giriş Yap</button>
  </form>
</div>
